

<div class="container" id="masthead">
  <div class="row" id=burgerimage>
    <img class="center-block"src="/../assets/img/burger.png" style="max-height: 200px; width: 200px">
  </div>
  <div class="col-xs-12 text-center" id="appTitle">
    <h2>Burgers!</h2>
  </div>
</div>

<div class="container">
  <div class="col-xs-6 text-center" class="task">
    <div class="row">
      {{#each Burger}}
        {{#unless this.devoured}}
      <div class="col-xs-9 text-center">
          <pre>{{this.id}}. {{this.burger_name}}</pre>
      </div>

    <div class="col-xs-3 text-center">
      <form action="/{{this.burger_name}}?_method=PUT" method="POST">
        <input type="hidden" name="devoured" value="true">
        <button type="submit"class="btn btn-default">Devour It!</button>
      </form>
    </div>
        {{/unless}}
      {{/each}}
    </div>
  </div>

  <div class="col-xs-6 text-center" class="task">
    {{#each Burger}}
      {{#if this.devoured}}
        <pre>{{this.id}}. {{this.burger_name}}</pre>
        <form action="/{{this.burger_name}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
        </form>
      {{/if}}
    {{/each}}
  </div>
</div>
<br>

<div class="container">
  <div class="row">
    <div class="col-xs-12 text-center enter_section">
    <form action="/" method="POST">
      <input type="textarea" name="name" id="burgerType">
      <button type="submit" class="btn btn-primary">Submit</button>     
    </form>
    <br>
    <p>Pick the burger you want to eat then click the "Submit" button</p>
    </div>
  </div>
</div>
